# Rentauras X Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Supabase Configuration
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio Configuration (SMS & WhatsApp OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# CMI Payment Gateway
CMI_MERCHANT_ID=your-cmi-merchant-id
CMI_API_KEY=your-cmi-api-key
CMI_SECRET_KEY=your-cmi-secret-key
CMI_SANDBOX_MODE=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Optional - for email OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Security
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# Pricing Configuration
PLATFORM_COMMISSION_RATE=0.15
BASE_PRICE_MAD=10.00
CLASSIC_EV_PRICE_PER_KM=3.50
COMFORT_EV_PRICE_PER_KM=5.00
EXPRESS_EV_PRICE_PER_KM=4.00
MINIMUM_RIDE_PRICE=15.00
SURGE_MULTIPLIER_PEAK=1.5

# Geolocation
DEFAULT_CITY_LAT=33.5731
DEFAULT_CITY_LNG=-7.5898
SEARCH_RADIUS_KM=10.0

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
CORS_CREDENTIALS=true

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=*
SOCKET_CORS_METHODS=GET,POST

# Development URLs
FRONTEND_URL=http://localhost:19006
ADMIN_DASHBOARD_URL=http://localhost:3001
